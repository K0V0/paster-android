<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.itemsActivity.ItemsActivity" android:background="@color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="0dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@color/elements_darker"
                android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingTop="4dp"
                android:paddingBottom="4dp" android:layout_marginBottom="4dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/itemsInput" android:layout_weight="100"
                    android:layout_marginRight="8dp" android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:textColorHighlight="@color/gray" android:hint="@string/item_input_something"/>
            <Button
                    android:text="@string/item_input_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/submit" android:layout_weight="1"
                    android:textColor="@color/black" android:backgroundTint="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" tools:itemCount="20" android:id="@+id/itemsRecyclerView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>