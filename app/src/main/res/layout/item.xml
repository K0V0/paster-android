<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/item"
        android:background="@color/elements_lighter" android:padding="4dp" android:layout_margin="4dp"
        android:gravity="center_vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="10000"
            android:gravity="center_vertical|fill_vertical" android:id="@+id/itemPreviewWrapper">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/itemPreview"
                android:textColor="@color/black" android:gravity="center_vertical"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/itemIdentificator"
                android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_vertical"
            android:layout_margin="2dp" android:id="@+id/itemDeleteWrapper">
        <Button
                android:text="@string/item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/itemDelete"
                app:iconTint="@color/white" android:backgroundTint="@color/white" android:textColor="@color/gray"
                android:padding="0dp" android:minHeight="36dp" android:minWidth="36dp"
                android:insetBottom="0dp" android:insetTop="0dp" android:textSize="24dp" android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
